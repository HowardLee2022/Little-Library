<div class="container my-4 col-med-6">
  <div class="d-flex justify-content-center align-items-center">
    <div class="form-container">
    <h1>Login to browse the library!</h1>
      <form>
        <div class="form-group">
          <label for="exampleInputEmail1" class="mb-1">Email address</label>
          <input type="email" class="form-control mb-2" id="email-log" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1" class="mb-1">Password</label>
          <input type="password" class="form-control mb-2" id="password-log" placeholder="Password">
        </div>
        <button class="btn btn-primary" id="log-btn">Login</button>
        <button class="btn btn-primary" id="sign-btn">Sign Up</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>