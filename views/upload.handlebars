<div class="container my-4">
  <div class="d-flex justify-content-center align-items-center">
    <div class="form-container">
    <h1>Add a Book to the Library!</h1>
    <form>
      <div class="form-group">
        <label for="exampleFormControlInput1" class="mb-1">Title</label>
        <input class="form-control mb-2" id="book-name" placeholder="Harry Potter">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1" class="mb-1">Author</label>
        <input class="form-control mb-2" id="book-author" placeholder="J.K. Rowling">
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1" class="mb-1">Genre</label>
        <select class="form-control mb-2" id="category-id">
      <option>Horror</option>
      <option>Science Fiction</option>
      <option>Fantasy</option>
      <option>Comedy</option>
      <option>Adventure Story</option>
      <option>Children Book</option>
      <option>Romance</option>
      <option>Mystery</option>
      <option>Memoir</option>
      <option>Others</option>
        </select>
      </div>
      <button id="upload_widget" class="cloudinary-button">Upload files</button>
      <button class="btn btn-primary" id="addbookbtn">add book</button>
    </form>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/js/upload.js"></script>